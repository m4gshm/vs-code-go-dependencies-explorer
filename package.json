{
  "name": "vs-code-go-dependencies-explorer",
  "displayName": "",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:go",
    "onLanguage:go.sum",
    "onLanguage:gotmpl",
    "onDebugInitialConfigurations",
    "onDebugResolve:go",
    "onWebviewPanel:welcomeGo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "go.dependencies.explorer",
          "name": "Dependencies",
          "visibility": "hidden",
          "when": "go.showExplorer"
        }
      ]
    },
    "commands": [
      {
        "command": "go.dependencies.refresh",
        "title": "Go Dependencies: Refresh",
        "description": "Refresh the Go dependencies.",
        "category": "Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "go.dependencies.open.in.integrated.terminal",
        "title": "Go Dependencies: Open selected in Integrated Terminal"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "go.dependencies.refresh",
          "when": "view == go.dependencies.explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == 'go.dependencies.explorer'",
          "command": "go.dependencies.open.in.integrated.terminal"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "0.24.2",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}